{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noStrictGenericChecks": true,
    "lib": ["es2017", "dom"]
  },
  "exclude": [
    "src/app/main.ts",
    "aot/"
  ],
  "include": [
    "src/app/app.module.ts",
    "src/app/main-jit.ts"
  ]
}
